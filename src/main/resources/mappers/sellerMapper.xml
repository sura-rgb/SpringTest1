<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.vamos.spring.test.mvc.repository.SellerRepository">
 
 	<insert id="insertSeller" parameterType="map" >
 		INSERT INTO
 			`seller`
		(
			`nickname`
			,`temperature`
			,`profileImage`
		)
		VALUE
		(
			#{nickname}
			,#{temperature}
			,#{profileImage}
		)
		
 	</insert>
 
 	<select id="lastSeller" resultType="com.vamos.spring.test.mvc.domain.Seller">
 		SELECT
 		`id`
 		,`nickname`
 		,`temperature`
 		,`profileImage`
 		,`createdAt`
 		,`updatedAt`
 		FROM
 		`seller`
 		ORDER BY
 		`id` DESC
 		LIMIT
 		1
 	</select>
 
 	<select id="sellerId" parameterType="int"
 	resultType="com.vamos.spring.test.mvc.domain.Seller">
 		SELECT
 		`id`
 		,`nickname`
 		,`temperature`
 		,`profileImage`
 		,`createdAt`
 		,`updatedAt`
 		FROM
 		`seller`
 		WHERE
 		`id` = #{id}
 	</select>
 </mapper>